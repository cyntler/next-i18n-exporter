{
  "name": "next-locales",
  "version": "0.0.0",
  "description": "Internationalization support for Next.js with static HTML export.",
  "keywords": [
    "i18n",
    "html",
    "export",
    "internationalization",
    "nextjs",
    "static"
  ],
  "main": "./dist/exports/client.js",
  "types": "./dist/exports/client.d.ts",
  "exports": {
    ".": "./dist/exports/client.js",
    "./server": "./dist/exports/server.js"
  },
  "typesVersions": {
    "*": {
      "server": [
        "./dist/exports/server.d.ts"
      ]
    }
  },
  "scripts": {
    "start": "tsc --watch",
    "build": "rimraf ./dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint ./src --ext ts,tsx",
    "prettier": "prettier --check ./src"
  },
  "author": "Damian Cyntler",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "find-project-root": "^1.1.1",
    "mustache": "^4.2.0",
    "next-language-detector": "^1.0.2",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@cyntler/eslint-config": "^0.0.2",
    "@rushstack/eslint-patch": "^1.1.1",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^27.4.1",
    "@types/mustache": "^4.1.2",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "next": ">=12.1.0",
    "react": ">=17.0.2"
  }
}
